generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/@prisma/files-client"
}

datasource db {
  provider = "postgresql"
  url      = env("FILES_DATABASE_URL")
}

model File {
  id String @id @default(uuid())

  key      String @unique()
  filename String

  contentType String
  size        Int

  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
